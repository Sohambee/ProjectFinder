<div class="flex mb-4 columns-1 rows-1 px-4 sm:px-0">
  <%
    color =  'primary'
  %>
  <!-- <div class="w-16 content-center"><%= inline_svg_pack_tag 'media/svgs/featured-projects.svg', class: "fill-current text-#{color}-600" %></div> -->
  <div class="block sm:flex w-full pt-0 sm:pt-1">
    <div class="w-full text-3xl text-teal-600 mt-4 font-bold">
      Featured Categories
    </div>
  </div>
</div>

<div id="featured-cat-slider-1" class="w-full px-4 sm:px-0 space-y-bottom-4 sm:grid grid-cols-2 md:grid-cols-3 sm:gap-6">
  <% collection.first(3).each do |category| %>
    <% cache category do %>
      <%= render partial: 'partials/category_card', locals: { category: category} %>
    <% end %>
  <% end %>
</div>

<div id="featured-cat-slider-2" class="w-full px-4 sm:px-0 space-y-bottom-4 sm:grid grid-cols-2 md:grid-cols-3 sm:gap-6">
  <% collection.last(3).each do |category| %>
    <% cache category do %>
      <%= render partial: 'partials/category_card', locals: { category: category} %>
    <% end %>
  <% end %>
</div>

<ol class="carousel-indicators ">
			<li class="inline-block mr-3">
				<label id="fc-indic-1" class="carousel-bullet block text-5xl text-white text-blue-500">•</label>
			</li>
			<li class="inline-block mr-3">
				<label id="fc-indic-2" class="carousel-bullet block text-5xl text-white">•</label>
			</li>
</ol>

<button
    id="featuredCatButtonPrev"
    class="carousel-control-prev absolute top-0 bottom-0 pl-1 left-0 focus:outline-none"
    type="button"
    data-bs-target="#carouselExampleControls"
    data-bs-slide="prev"
  >
    <span class="carousel-control-prev-icon inline-block bg-no-repeat" aria-hidden="true"></span>
    <span class="visually-hidden"><%= inline_svg_pack_tag 'media/svgs/eva-prev.svg', class: 'duration-200 hover:scale-125 inline-block fill-current transform transition-transform duration-100 -translate-x-1 group-hover:translate-x-0' %></span>
</button>

<button
    id="featuredCatButtonNext"
    class="carousel-control-next absolute top-0 bottom-0 p-0 right-0 focus:outline-none"
    type="button"
    data-bs-target="#carouselExampleControls"
    data-bs-slide="next"
  >
    <span class="carousel-control-next-icon inline-block bg-no-repeat" aria-hidden="true"></span>
    <span class="visually-hidden"><%= inline_svg_pack_tag 'media/svgs/eva-next.svg', class: 'duration-200 hover:scale-125 inline-block fill-current transform transition-transform duration-100 -translate-x-1 group-hover:translate-x-0' %></span>
</button>

<div class="-ml-2 mt-4 pb-4 text-center">
      <%= link_to projects_path(highlight: true), class: 'text-primary-700 font-bold group' do %>
        <button class="rounded border border-none bg-primary-500 text-white hover:bg-primary-600 transform transition-all duration-100 hover:scale-110 py-3 px-6">See All</button>
      <% end %>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>

<script>

  $(window).ready(function() {
    $("#featured-cat-slider-2").hide();
    $("#featuredCatButtonNext").on('click', function() {
      $("#featured-cat-slider-1").hide();
      $("#featured-cat-slider-2").show(700);
      $("#fc-indic-1").removeClass("text-blue-500");
      $("#fc-indic-2").addClass("text-blue-500");
    });
    $("#featuredCatButtonPrev").on('click', function() {
      $("#featured-cat-slider-2").hide();
      $("#featured-cat-slider-1").show(700);
      $("#fc-indic-2").removeClass("text-blue-500");
      $("#fc-indic-1").addClass("text-blue-500");
    });
  })

</script>