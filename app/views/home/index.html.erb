<!-- Hero -->
<div class="bg-white -mt-6">
  <div class="banner w-screen pt-36 pb-36 mb-24 bg-fixed">
    <div class="container text-left">
      <h1 class="object-left text-6xl text-white font-bold tracking-tight leading-tight">Find Projects Ideas</h1>
      <h2 class="text-3xl tracking-tight text-white font-bold leading-tight">We help people find the right projects for them</h2>
      <div class="relative w-1/2 left-0">
        <%= form_with url: projects_path, local: true, method: :get, html: {'x-ref': 'searchForm'} do |form| %>
          <%= form.text_field :query, placeholder: 'Try "website development"', value: params[:query], class: "border-none border-primary-100 p-2 pr-9 mt-4 rounded w-full text-left border-primary-400 h-12 align-bottom text-black outline-none focus:border-primary-600", required: true %>
          <button class="absolute text-white inset-auto right-0 p-2 cursor-pointer border-none shadow-none text-sm bg-primary-600 hover:bg-gray-700 transition duration-75 w-16 rounded-r" style="margin-top: 16px; height: 48px" @click="$refs.searchForm.submit()">
           <!-- <%= inline_svg_pack_tag 'media/svgs/magnifier.svg' %> -->
           Search
         </button>
        <% end %>
      </div>
      <div class="text-white font-bold text-md mt-4">
        Popular:
        <%= link_to projects_path, class: "" do %>
        <button class="border-2 font-bold border-white text-sm rounded-full px-3 py-1 hover:bg-white transition duration-300 hover:text-gray-600">Website Design</button>
        <button class="border-2 font-bold border-white text-sm rounded-full px-3 py-1 hover:bg-white transition duration-300 hover:text-gray-600">Mobile App</button>
        <button class="border-2 font-bold border-white text-sm rounded-full px-3 py-1 hover:bg-white transition duration-300 hover:text-gray-600">Machine Learning</button>
        <button class="border-2 font-bold border-white text-sm rounded-full px-3 py-1 hover:bg-white transition duration-300 hover:text-gray-600">Robotics</button>
        <% end %>
      </div>
  </div>
</div>
  <div id="mostViewed" class="relative rounded-lg container text-center bg-blue-100 z-10 pb-4 px-15 py-10">
    <%= render partial: 'partials/most-viewed', locals: {title: "Most Viewed", projects: @most_view_projects, category: nil} %>
  </div>
  <br/>
  <!-- Featured projects -->
  <div id="featuredCategory" class="relative rounded-lg container text-center bg-blue-200 z-10 pb-4 px-15 py-10">
    <%= render partial: 'partials/featured-projects', locals: {title: "Most Viewed", projects: @most_view_projects, category: nil} %>
  </div>
  <br/>
  <!-- Project categories -->
  <div id="featuredCategory" class="relative rounded-lg container text-center bg-blue-300 z-10 pb-4 px-15 py-10">
    <%= render partial: 'featured-category', locals: {collection: @project_categories}%>
  </div>
</div>

