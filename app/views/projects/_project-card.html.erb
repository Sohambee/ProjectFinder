<div class='relative block shadow-lg hover:shadow-md transform transition-all duration-100 '>
  <%
    category = Settings.project_categories.select { |cat| cat.name == local_assigns[:category] }.first if local_assigns[:category].present?

    category_override = category.present? ? local_assigns[:category] : nil
  %>

  <div class="w-full bg-center bg-indigo-600 bg-opacity-50 bg-cover content-center" style="height: 400px; background-image: url(<%= project.image_url.present? ? project.image_url : project.cover_photo(category_override)%>);">
    <%# <div class="absolute w-full h-80 inset-auto left-0 top-0 mr-4 mt-4 z-10 text-white px-3 py-1 " style="background-color: rgba(0, 0, 0, 0.5);">
  <div class="relative" >
    <div class="absolute inset-x-0  inset-y-0 w-3/4 md:w-2/5 mx-auto my-auto -mt-1 ">

    <%= project.name %>
    <%# </div>
  </div>

   </div> %>
  </div>

 
   



  <div class="px-5 pt-5 pb-6">
    <div class="text-lg font-medium truncate leading-tight mb-1"><%= project.name %></div>
    <div class="text-gray-500 text-sm mb-5 leading-tight overflow-hidden" style="height: 50px;">
      <% if project.short_description.present? %>
        <%= project.short_description %>
      <% else %>
        <%= project.description.truncate 150 %>
      <% end %>
    </div>
    <% if project.project_types.present? %>
      <div class="relative w-full h-6 mb-4">
        <span class="scroll-gradient-right inline-block w-4 h-6 absolute right-0 z-50"></span>
        <div class="w-full overflow-x-auto scrolling-touch scrollbar-hidden">
          <div class="flex flex-row flex-no-wrap flex-shrink-0 space-x-right-2">
            <% project.project_types.each do |type| %>
              <%= filter_badge label: type %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="relative grid grid-cols-2 gap-2 text-xs mt-3">
      <div>
        <div class="font-bold">
          <%= project.views =%> view(s)
        </div>
        <div class="text-gray-500"><%= time_ago_in_words project.created_at %> ago</div>
        
      </div>
   
     

      
    </div>
    <%= link_to project, class: 'button relative block shadow-lg hover:bg-primary-500 hover:text-white transform transition-all duration-100 hover:scale-105' do %>
     <div class=" content-center text-center width-full"><button class="">Look at project</button></div>
     <% end %>
  </div>

</div>