<div class="w-full flex flex-col sm:flex-row justify-center border-b border-gray-200">
  <div class="w-full sm:w-auto mx-auto sm:mx-0 overflow-x-auto scrolling-touch scrollbar-hidden sm:overflow-x-auto">
    <div class="flex flex-row space-x-6 flex-no-wrap h-full">
      <% Settings.project_categories.each do |category| %>
        <span class="submenu-item items-center px-1 pb-4 border-b hover:border-primary-600 text-gray-900 focus:outline-none focus:border-primary-700 transition duration-150 ease-in-out ml-4 text-center <%= "submenu-item-active" if @project_category.present? and @project_category.slug == category[:slug] %>">
          <%= link_to category.name, "/#{category.slug}" %>
        </span>
        <% is_category = false %>
      <% end %>
      <span class="submenu-item items-center px-1 pb-4 border-b hover:border-primary-600 text-gray-900 focus:outline-none focus:border-primary-700 transition duration-150 ease-in-out ml-4 text-center <%= "submenu-item-active" if @project_category.blank? %>">
        <%= link_to t('all_categories'), projects_path %>
      </span>
    </div>
  </div>
</div>
